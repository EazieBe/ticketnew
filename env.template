# Ticketing System Environment Variables Template
# Copy this file to .env and fill in your actual values
# cp env.template .env

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@hostname:port/database_name
DATABASE_URL=postgresql://ticketuser:securepassword123@localhost:5432/ticketing

# Connection pool (optional; defaults: 5, 10)
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret Key - MUST be set (32+ chars). No default; app will not start without it.
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Copy to .env - never commit .env
SECRET_KEY=

# Bcrypt password hashing rounds (higher = more secure but slower)
# Recommended: 12-14
BCRYPT_ROUNDS=12

# JWT token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# REDIS CONFIGURATION (Optional - for WebSocket broadcasting + rate limiting)
# =============================================================================
# Used for WebSocket pub/sub and distributed rate limiting (login protection)
# Full URL: redis://host:port/db
REDIS_URL=redis://localhost:6379/0

# Login rate limit: attempts per minute per IP (when Redis available)
RATE_LIMIT_LOGIN_PER_MINUTE=10
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment (development, staging, production)
APP_ENV=development

# Enable debug mode (True/False)
DEBUG=False

# CORS allowed origins (comma-separated).
# Front and back run on the same server; app is only used from PCs on the same LAN.
# Add the frontend origin(s) users will use: http://<server-lan-ip>:3000 and optionally localhost for dev.
# Example: http://localhost:3000,http://192.168.43.50:3000
CORS_ORIGINS=http://localhost:3000,http://192.168.43.50:3000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================
# BACKUP_PATH=/path/to/backups
# BACKUP_RETENTION_DAYS=30

